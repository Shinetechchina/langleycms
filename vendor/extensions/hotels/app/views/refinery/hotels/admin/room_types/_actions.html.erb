<ul>
  <% if ::Refinery::Hotels::Admin::RoomTypesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.hotels_admin_room_types_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_hotels_admin_room_type_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Hotels::Admin::RoomTypesController.sortable? && ::Refinery::Hotels::RoomType.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Room Types"),
                 refinery.hotels_admin_room_types_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Room Types"),
                 refinery.hotels_admin_room_types_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
