    <p>
      <%=raw @hotel.description %>
    </p>
  </section>
    <% @special_hotel_room_types.each do |room_type| %>
        <h4>name:<%= raw room_type.name %></h4>
        <h4>contain number:<%= raw room_type.contain_num %></h4>
        <h4>price:<%= raw room_type.price %> $</h4>
        <h4>left roomes:<%= raw room_type.left_rooms %></h4>
        <br>
    <% end %>
<% end %>


